<Window x:Class="ProjectApplication.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectApplication"
        mc:Ignorable="d"
        Title="EditUser" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="center">
            <Label Content="User Details:"></Label>
            <Label Content="User Name:"></Label>
            <TextBox x:Name="tbUserName"></TextBox>
            <Label Content="User Password:"></Label>
            <TextBox x:Name="tbUserPassword"></TextBox>
            <Label Content="User Role:"></Label>
            <TextBox x:Name="tbUserRole"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Content="Save Changes"></Button>
                <Button Content="Delete User"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
