<UserControl x:Class="ProjectApplication.OrdersListViews.PurchaseOrders_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectApplication.OrdersListViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <StackPanel>
        <Label>Show an overview of orders</Label>
        <ListView x:Name="lvPurchaseOrders"></ListView>
            <Button x:Name="btnNewPurchaseOrder" Click="btnNewPurchaseOrder_Click">New Purchase Order</Button>
            <Button x:Name="btnEditPurchaseOrder">Edit Purchase Order</Button>
            <Label>Filter:</Label>
            <ComboBox x:Name="filter">
                <ComboBoxItem>
                    <Label>Unpaid orders</Label>
                </ComboBoxItem>
                <ComboBoxItem>
                    <Label>Past 48 hours</Label>
                </ComboBoxItem>
                <ComboBoxItem>
                    <Label>Not yet arrived</Label>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
