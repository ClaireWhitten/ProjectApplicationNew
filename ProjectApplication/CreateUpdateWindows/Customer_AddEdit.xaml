<Window x:Class="ProjectApplication.CreateUpdateWindows.Customer_AddEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:ProjectApplication.Classes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Customer_AddEdit" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:Role"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid Margin="0,0,0,-66">
        <StackPanel>
            <Label FontWeight="Bold" Margin="20 0 0 0">Customer:</Label>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Label Margin="10 0 0 0" Width="80">First Name:</Label>
                <TextBox x:Name="tbFirstName" Width="150"></TextBox>
                <Label Margin="10 0 0 0" Width="80">Last Name:</Label>
                <TextBox x:Name="tbLastName" Width="150"></TextBox>
                <Label Margin="10 0 0 0" Width="80">Date of Birth:</Label>
                <DatePicker SelectedDate="1958-04-19" x:Name="dpDOB"></DatePicker>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Label Margin="10 0 0 0" Width="80">Employee Id:</Label>
                <TextBox x:Name="tbEmployeeId" Width="150"></TextBox>
                <Label Margin="10 0 0 0" Width="80">User Account:</Label>
                <TextBox x:Name="tbUserAccount" Width="150"></TextBox>
            </StackPanel>
            <Label FontWeight="Bold" Margin="20 0 0 0">Job</Label>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Label  Margin="10 0 0 0" Width="80">Job Role:</Label>
                <ComboBox x:Name="cbRole" ItemsSource="{Binding Source={StaticResource dataFromEnum}}" Width="150"/>
                <Label  Margin="10 0 0 0" Width="80">Start Date:</Label>
                <DatePicker x:Name="dpStartDate" Width="150"></DatePicker>
                <Label  Margin="10 0 0 0" Width="60">Salary:</Label>
                <TextBox x:Name="tbSalary" Width="150"></TextBox>
            </StackPanel>

            <Label FontWeight="Bold" Margin="20 0 0 0">Address</Label>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Label Width="80" Margin="10 0 0 0">Street:</Label>
                <TextBox x:Name="tbStreet" Width="150"></TextBox>
                <Label Width="60" Margin="10 0 0 0">Number:</Label>
                <TextBox x:Name="tbNumber" Width="50"></TextBox>
                <Label Width="40" Margin="10 0 0 0">City:</Label>
                <TextBox x:Name="tbCity" Width="100"></TextBox>
                <Label Width="60" Margin="10 0 0 0">Postcode:</Label>
                <TextBox x:Name="tbPostcode" Width="100"></TextBox>
            </StackPanel>

            <Label FontWeight="Bold" Margin="20 0 0 0">Contact</Label>
            <StackPanel Orientation="Horizontal" Margin="20">
                <Label Margin="10 0 0 0" Width="80">Phone:</Label>
                <TextBox x:Name="tbPhoneNumber" Width="150"></TextBox>
                <Label Margin="10 0 0 0" Width="60">Email:</Label>
                <TextBox x:Name="tbEmail" Width="250"></TextBox>
            </StackPanel>
            <Button x:Name="btnSave" Background="AliceBlue" BorderBrush="Black" Width="100" Height="30" Margin="20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Height="20" Margin="10 0 10 0">Save</TextBlock>
                    <Image Source="/Images/save_symbol.png" Width="20" Height="30"></Image>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</Window>
