<UserControl x:Class="ProjectApplication.usercontrols.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectApplication.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
        <TextBox x:Name="tbSearch" Width="200" Height="30"></TextBox>
        <Button x:Name="btnSearch" Width="40" Height="30" Margin="5">
            <Image Source="../Images/search_symbol.png" Width="30" Height="30"></Image>
        </Button>
        </StackPanel>
    </Grid>
</UserControl>
