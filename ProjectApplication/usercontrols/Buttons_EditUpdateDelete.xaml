<UserControl x:Class="ProjectApplication.usercontrols.Buttons_EditUpdateDelete"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectApplication.usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnDelete" Background="AliceBlue" BorderBrush="Black"  Width="40" Height="30" Margin="5" Click="btnDelete_Click">
                <Image Source="../Images/delete_symbol.png" Width="20" Height="30"></Image>
            </Button>
            <Button x:Name="btnEdit" Background="AliceBlue" BorderBrush="Black" Width="40" Height="30" Margin="5" Click="btnEdit_Click_1">
                <Image Source="../Images/edit_symbol.png" Width="40" Height="40" VerticalAlignment="Center"></Image>
            </Button>
            <Button x:Name="btnAdd" Background="AliceBlue" BorderBrush="Black" Width="40" Height="30" Margin="5" Click="btnAdd_Click">
                <Image Source="../Images/add_symbol.png" Width="20" Height="30"></Image>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
